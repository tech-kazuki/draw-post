<a class="content_over_link" href="<%= picture_path(picture) %>">
  <div class="content">
    <img src="<%= picture.image %>" alt="<%= picture.title %>" width="350px" height="250px">
    <section class="content__btm">
      <div class="content__btm__title"><%= picture.title %></div>
      <p class="content__btm__detail"><%= picture.detail %></p>
      <div class="content__btm__user">
        <div class="content__btm__user__name">テストユーザー</div>
      </div>
    </section>
  </div>
</a>
